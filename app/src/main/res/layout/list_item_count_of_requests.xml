<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_bidder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bidders Name: "
        android:textStyle="bold"
        android:textSize="@dimen/heading_font_size"
        />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_bidder_name"
        android:layout_marginLeft="20dp"
        android:text="Name"/>

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bid Price: "
        android:textSize="@dimen/heading_font_size"
        android:textStyle="bold"
        android:layout_below="@id/tv_bidder_name"/>


    <TextView
        android:id="@+id/tv_price_product_request"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:layout_below="@id/tv_bidder_name"
        android:layout_toRightOf="@id/tv_product_price"
        android:layout_gravity="center"
        android:layout_weight="1"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="2dp"
        android:layout_below="@id/tv_price_product_request"
        android:background="@color/divider"/>


</RelativeLayout>