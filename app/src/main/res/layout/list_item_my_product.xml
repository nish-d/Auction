<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">


    <TextView
        android:id="@+id/tv_name"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Name: "
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_product_name"
        android:text="Name"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/tv_name"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: "
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@id/tv_name"/>


    <TextView
        android:id="@+id/tv_price"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:layout_below="@id/tv_name"
        android:layout_toRightOf="@id/tv_product_price"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_product_description"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:textSize="18dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_product_price"
        android:textStyle="bold"
        android:text="Description: "/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@id/tv_product_price"
        android:layout_toRightOf="@id/tv_product_description"
        android:text="Description"/>


    <LinearLayout
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/tv_display_no_of_bidders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. of Requests"
        android:layout_margin="10dp"
        android:backgroundTint="@color/colorAccent"
        />

        <TextView
            android:id="@+id/tv_no_of_bidders"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="2"/>
    </LinearLayout>

    <!--Button
        android:id="@+id/btn_request"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:text="PUT BID"
        android:background="@color/colorAccent"/>-->
    <!--android:onClick="onRequest"/>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_description"
        android:background="@color/divider"/>



</RelativeLayout>